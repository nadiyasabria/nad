// Superclass
class Pembayaran {
    public void proses(double total) {
        System.out.println("Memproses pembayaran sebesar: Rp " + total);
    }
}

// Subclass 1: Tunai
class Tunai extends Pembayaran {
    public void proses(double total) {
        double bayar = 100000; // contoh nominal uang tunai
        double kembalian = bayar - total;
        System.out.println("=== Pembayaran Tunai ===");
        System.out.println("Total belanja: Rp " + total);
        System.out.println("Uang dibayar : Rp " + bayar);
        System.out.println("Kembalian     : Rp " + kembalian);
        System.out.println();
    }
}

// Subclass 2: Kartu
class Kartu extends Pembayaran {
    public void proses(double total) {
        double admin = total * 0.02; // biaya admin 2%
        double totalBayar = total + admin;
        System.out.println("=== Pembayaran Kartu ===");
        System.out.println("Total belanja : Rp " + total);
        System.out.println("Biaya admin   : Rp " + admin);
        System.out.println("Total dibayar : Rp " + totalBayar);
        System.out.println();
    }
}

// Subclass 3: Dompet Digital
class DompetDigital extends Pembayaran {
    public void proses(double total) {
        double potongan = total * 0.05; // potongan 5%
        double totalBayar = total - potongan;
        System.out.println("=== Pembayaran Dompet Digital ===");
        System.out.println("Total belanja : Rp " + total);
        System.out.println("Potongan      : Rp " + potongan);
        System.out.println("Total dibayar : Rp " + totalBayar);
        System.out.println();
    }
}

// Tester / Main Class
public class PembayaranTester {
    public static void main(String[] args) {
        Pembayaran[] daftar = new Pembayaran[3];
        
        daftar[0] = new Tunai();
        daftar[1] = new Kartu();
        daftar[2] = new DompetDigital();
        
        double totalBelanja = 75000;
        for (Pembayaran p : daftar) {
            p.proses(totalBelanja);
        }
    }
}
